<h1>Editar informações de <%= @establishment.trade_name %></h1>

<% if @establishment.errors.any? %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @establishment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @establishment) do |f| %>
  <div>
    <%= f.label :trade_name %>
    <%= f.text_field :trade_name %>
  </div>

  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
  </div>

  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  
  <div>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  
  <div>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>
  
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  
  <%= f.submit 'Salvar' %>
<% end %>

<p><%= link_to 'Voltar', root_path %></p>